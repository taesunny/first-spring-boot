{{>layout/header}}

<h1>Register a post</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="Enter a title">
            </div>
            <div class="form-group">
                <label for="author"> Author </label>
                <input type="text" class="form-control" id="author" placeholder="Enter your name">
            </div>
            <div class="form-group">
                <label for="content"> Content </label>
                <textarea class="form-control" id="content" placeholder="Write your contents"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">Cancel</a>
        <button type="button" class="btn btn-primary" id="btn-save">Register</button>
    </div>
</div>

{{>layout/footer}}